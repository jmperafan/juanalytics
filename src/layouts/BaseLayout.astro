---
import '../styles/global.css';
import '../styles/layout.css';
import '../styles/content.css';
import { buildUrl } from '../utils/urlHelper';
import OptimizedImage from '../components/OptimizedImage.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  author?: string;
  publishDate?: string;
}

const {
  title,
  description = "Portfolio of Juan Manuel Perafan - Analytics Engineer, dbt Community Award Recipient, and Data Community Organizer",
  image = "/profile_photo.png",
  author = "Juan Manuel Perafan",
  publishDate
} = Astro.props;

// Get base path for GitHub Pages
const currentPath = Astro.url.pathname;
const canonicalUrl = "https://juanalytics.com" + currentPath;
const fullUrl = "https://juanalytics.com" + buildUrl("");
const imageUrl = image.startsWith("http") ? image : "https://juanalytics.com" + image;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content={author} />
    <link rel="icon" type="image/png" href={buildUrl("logo.png")} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Juanalytics Blog RSS Feed" href={buildUrl("rss.xml")} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Juanalytics" />
    
    <!-- Twitter / X -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageUrl} />
    <meta name="twitter:creator" content="@juanalytics" />
    
    <!-- Article metadata -->
    {publishDate && <meta property="article:published_time" content={publishDate} />}
    <meta property="article:author" content={author} />
    
    <!-- JSON-LD Structured Data -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Juan Manuel Perafan",
        "url": "https://juanalytics.com",
        "image": "https://juanalytics.com/profile_photo.png",
        "description": "Analytics Engineer, dbt Community Award Recipient, and Data Community Organizer",
        "jobTitle": "Analytics Engineer",
        "sameAs": [
          "https://www.linkedin.com/in/jmperafan/",
          "https://github.com/jmperafan",
          "https://www.youtube.com/@juanalytics",
          "https://linktr.ee/juanalytics"
        ],
        "worksFor": {
          "@type": "Organization",
          "name": "Juanalytics"
        }
      }
    </script>
    
    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title}</title>

    <!-- GoatCounter Analytics -->
    <script data-goatcounter="https://jmperafan.goatcounter.com/count"
            async src="//gc.zgo.at/count.js"></script>
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-to-content">Skip to main content</a>

    <header>
      <nav class="site-nav container">
        <a href={buildUrl("")} class="logo-container">
          <OptimizedImage
            src={buildUrl("logo.png")}
            alt="Juanalytics Logo"
            class="logo-image"
            loading="eager"
            fetchpriority="high"
            width={200}
            height={200}
          />
          <span class="logo-text">Juanalytics</span>
        </a>
        <button class="mobile-menu-toggle" aria-label="Toggle menu" id="mobile-menu-toggle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <div class="nav-links" id="nav-links">
          <a href={buildUrl("talks")}>Conferences</a>
          <a href={buildUrl("videos")}>Videos</a>
          <a href={buildUrl("podcasts")}>Podcasts</a>
          <a href={buildUrl("blog")}>Blog</a>
          <a href={buildUrl("books")}>Books</a>
          <a href={buildUrl("about")}>About</a>
        </div>
      </nav>
    </header>

    <script>
      // Mobile menu functionality
      const menuToggle = document.getElementById('mobile-menu-toggle');
      const navLinks = document.getElementById('nav-links');
      const body = document.body;

      function closeMobileMenu() {
        navLinks?.classList.remove('active');
        body.style.overflow = ''; // Re-enable scrolling
      }

      function openMobileMenu() {
        navLinks?.classList.add('active');
        body.style.overflow = 'hidden'; // Prevent body scroll when menu is open
      }

      // Toggle menu on button click
      menuToggle?.addEventListener('click', (e) => {
        e.stopPropagation();
        if (navLinks?.classList.contains('active')) {
          closeMobileMenu();
        } else {
          openMobileMenu();
        }
      });

      // Close menu when clicking a link
      navLinks?.querySelectorAll('a').forEach((link) => {
        link.addEventListener('click', () => {
          closeMobileMenu();
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (navLinks?.classList.contains('active') &&
            !navLinks.contains(e.target as Node) &&
            !menuToggle?.contains(e.target as Node)) {
          closeMobileMenu();
        }
      });

      // Close menu on ESC key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && navLinks?.classList.contains('active')) {
          closeMobileMenu();
          menuToggle?.focus(); // Return focus to toggle button
        }
      });

      // Prevent menu from staying open on resize to desktop
      let resizeTimer: number;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = window.setTimeout(() => {
          if (window.innerWidth > 768) {
            closeMobileMenu();
          }
        }, 250);
      });
    </script>

    <main id="main-content" tabindex="-1">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-content">
        <p>&copy; {new Date().getFullYear()} Juan Manuel Perafan. All rights reserved.</p>
        <div class="footer-links">
          <a href="https://www.linkedin.com/in/jmperafan/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
          <a href="https://github.com/jmperafan" target="_blank" rel="noopener noreferrer">GitHub</a>
          <a href="https://linktr.ee/juanalytics" target="_blank" rel="noopener noreferrer">Linktree</a>
          <a href={buildUrl("rss.xml")} title="Subscribe to RSS Feed" aria-label="Subscribe to RSS Feed">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="display: inline-block; vertical-align: middle;">
              <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
            </svg>
            RSS
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
