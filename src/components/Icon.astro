---
/**
 * Icon Component
 * Centralized SVG icon library for consistent styling and reusability
 *
 * Usage:
 *   <Icon name="check" size={20} />
 *   <Icon name="menu" class="custom-class" />
 */

interface Props {
  name: string;
  size?: number;
  width?: number;
  height?: number;
  class?: string;
  strokeWidth?: number;
}

const {
  name,
  size = 24,
  width = size,
  height = size,
  class: className = '',
  strokeWidth = 2,
} = Astro.props;

// Icon library - all SVG paths and viewBox settings
const icons: Record<string, { viewBox: string; path: string; fill?: string }> = {
  // Navigation & UI
  menu: {
    viewBox: '0 0 24 24',
    path: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />',
  },
  check: {
    viewBox: '0 0 24 24',
    path: '<polyline points="20 6 9 17 4 12"></polyline>',
  },
  arrow: {
    viewBox: '0 0 24 24',
    path: '<line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline>',
  },

  // Media & Content
  play: {
    viewBox: '0 0 24 24',
    path: '<polygon points="5 3 19 12 5 21 5 3"></polygon>',
  },
  microphone: {
    viewBox: '0 0 24 24',
    path: '<path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path><path d="M19 10v2a7 7 0 0 1-14 0v-2"></path><line x1="12" y1="19" x2="12" y2="23"></line><line x1="8" y1="23" x2="16" y2="23"></line>',
  },
  document: {
    viewBox: '0 0 24 24',
    path: '<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline>',
  },
  presentation: {
    viewBox: '0 0 24 24',
    path: '<rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>',
  },
  book: {
    viewBox: '0 0 24 24',
    path: '<path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>',
  },
  package: {
    viewBox: '0 0 24 24',
    path: '<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line>',
  },

  // RSS & Social
  rss: {
    viewBox: '0 0 24 24',
    path: '<path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>',
    fill: 'currentColor',
  },

  // Utility
  calendar: {
    viewBox: '0 0 24 24',
    path: '<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line>',
  },
  clock: {
    viewBox: '0 0 24 24',
    path: '<circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline>',
  },
  location: {
    viewBox: '0 0 24 24',
    path: '<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle>',
  },
};

const icon = icons[name];

if (!icon) {
  console.warn(`Icon "${name}" not found in icon library`);
}
---

{icon && (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width={width}
    height={height}
    viewBox={icon.viewBox}
    fill={icon.fill || 'none'}
    stroke={icon.fill ? 'none' : 'currentColor'}
    stroke-width={icon.fill ? '0' : strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
    class={className}
    aria-hidden="true"
    set:html={icon.path}
  />
)}
