---
interface Props {
  videoUrl: string;
  alt: string;
  thumbnail?: string;
}

const { videoUrl, alt, thumbnail } = Astro.props;

// Extract YouTube video ID from various URL formats
function getYouTubeVideoId(url: string): string | null {
  const patterns = [
    /(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([^&\n?#]+)/,
    /youtube\.com\/watch\?.*v=([^&\n?#]+)/
  ];

  for (const pattern of patterns) {
    const match = url.match(pattern);
    if (match && match[1]) {
      return match[1];
    }
  }
  return null;
}

// Use provided thumbnail if available, otherwise generate from video ID
const videoId = getYouTubeVideoId(videoUrl);
const thumbnailUrl = thumbnail || (videoId ? `https://img.youtube.com/vi/${videoId}/hqdefault.jpg` : null);
---

{thumbnailUrl && (
  <img
    src={thumbnailUrl}
    alt={alt}
    style="width: 100%; height: 200px; object-fit: cover; pointer-events: none;"
  />
)}
